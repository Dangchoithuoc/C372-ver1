<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Cart | The Bookmark</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <div class="shell header-inner">
      <div class="brand">The Bookmark</div>
      <nav>
        <a href="/">Home</a>
        <a href="/login">Login</a>
        <a href="/checkout">Checkout</a>
      </nav>
      <form action="/cart/clear" method="POST" style="margin:0;">
        <button class="cta" type="submit">Clear cart</button>
      </form>
    </div>
  </header>

  <main class="shell" style="padding: 20px 0 60px;">
    <h1>Your Cart</h1>
    <% if (!cart || cart.length === 0) { %>
      <p class="muted">Your cart is empty. <a href="/">Browse books</a>.</p>
    <% } else { %>
      <div class="card" style="padding:20px;">
        <div class="row" style="margin-bottom:12px;">
          <strong>Items</strong>
          <span class="muted">Total: $<%= total %></span>
        </div>
        <div class="grid" style="grid-template-columns: 2fr 1fr 1fr 1fr; gap: 10px; align-items: center;">
          <strong>Title</strong>
          <strong class="center">Price</strong>
          <strong class="center">Qty</strong>
          <strong class="center">Remove</strong>
          <% cart.forEach(function(item) { %>
            <div>
              <div><%= item.title %></div>
              <% if (item.badge) { %><span class="tag"><%= item.badge %></span><% } %>
            </div>
            <div class="center">$<%= Number(item.price || 0).toFixed(2) %></div>
            <div class="center">
              <form action="/cart/update" method="POST" style="display:flex; gap:6px; justify-content:center;">
                <input type="hidden" name="id" value="<%= item.id %>">
                <input type="number" name="qty" value="<%= item.qty %>" min="1" style="width:70px;">
                <button type="submit" class="cta" style="padding:8px 12px;">Update</button>
              </form>
            </div>
            <div class="center">
              <form action="/cart/remove" method="POST">
                <input type="hidden" name="id" value="<%= item.id %>">
                <button type="submit" class="cta" style="padding:8px 12px; background: #ef4444; box-shadow:none;">Remove</button>
              </form>
            </div>
          <% }); %>
        </div>
      </div>

      <div class="row" style="margin-top:18px;">
        <div>
          <a class="tag" href="/">Continue browsing</a>
        </div>
        <div class="row" style="gap:12px;">
          <div class="price" style="margin:0;">Subtotal: $<%= total %></div>
          <a class="cta" href="/checkout">Checkout</a>
        </div>
      </div>
    <% } %>
  </main>
</body>
</html>
