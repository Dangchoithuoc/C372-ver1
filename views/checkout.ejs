<link rel="stylesheet" href="/css/styles.css">

<div class="checkout-shell">

    <h2 class="checkout-title">Checkout</h2>

    <div class="checkout-columns">

        <!-- Delivery + Contact Info -->
        <div class="checkout-section">
            <h3>Delivery Options</h3>
            <button>Ship</button>
            <button style="margin-left: 8px;">Pick up</button>

            <h3 style="margin-top: 20px;">Contact Information</h3>

            <form method="POST" action="/checkout/pay">
                <input type="text" name="first_name" placeholder="First name" required>
                <input type="text" name="last_name" placeholder="Last name" required>
                <input type="email" name="email" placeholder="Email" required>
                <input type="text" name="contact" placeholder="Contact number" required>

                <button type="submit">Proceed to Payment</button>
            </form>
        </div>

        <!-- Order Summary + Payment Method -->
        <div class="checkout-section">
            <h3>Order Summary</h3>

            <table style="width:100%; border-collapse: collapse;">
                <tr style="border-bottom: 1px solid var(--border);">
                    <th style="text-align:left; padding-bottom: 8px;">Book</th>
                    <th>Qty</th>
                    <th style="text-align:right;">Subtotal</th>
                </tr>

                <% cart.forEach(item => { %>
                <tr>
                    <td><%= item.title %></td>
                    <td style="text-align:center;"><%= item.qty %></td>
                    <td style="text-align:right;">$<%= (item.price * item.qty).toFixed(2) %></td>
                </tr>
                <% }) %>
            </table>

            <p class="checkout-total">Total: $<%= total %></p>

            <h3 style="margin-top: 20px;">Payment Method</h3>
            <button>Credit / Debit Card</button><br><br>
            <button>PayNow</button><br><br>
            <button>GrabPay</button><br><br>
            <button>PayLah!</button><br><br>
        </div>

    </div>
</div>