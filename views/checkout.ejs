<h2 style="text-align:center; margin-top: 20px;">Checkout</h2>

<div style="display:flex; justify-content:center; gap:60px; margin-top:30px;">

  <!-- Delivery Section -->
  <div>
    <h3>Delivery options</h3>
    <button>Ship</button>
    <button>Pick up</button>

    <h3 style="margin-top:20px;">Contact Information</h3>

    <form method="POST" action="/checkout/next">
      <input type="text" name="first_name" placeholder="First name" required>
      <input type="text" name="last_name" placeholder="Last name" required><br><br>
      <input type="email" name="email" placeholder="Email" required><br><br>
      <input type="text" name="contact" placeholder="Contact number" required><br><br>

      <button type="submit">Save & Continue</button>
    </form>
  </div>

  <!-- Payment Method Section -->
  <div>
    <h3>Payment Method</h3>

    <button>ADD CREDIT / DEBIT CARD</button><br><br>
    <p style="text-align:center;">or</p>
    <button>PayNow</button><br><br>
    <button>GrabPay</button><br><br>
    <button>PayLah!</button><br><br>

    <p><strong>Total: $<%= total %></strong></p>
  </div>

</div>

